<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".fragments.EsdevenimentsInfoFragment">

    <ImageView
        android:id="@+id/imageEsdev"
        android:layout_width="236dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/cardview_border" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/linear_layout_border"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/lbNom"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/nomEsdevAct"
            android:textSize="@dimen/tamanyText"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_Nom"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/tamanyText"/>

        <TextView
            android:id="@+id/lbTipus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tipusEsdevInfo"
            android:textSize="@dimen/tamanyText"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_Tipus"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/tamanyText" />

        <TextView
            android:id="@+id/lbData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dataEsdevInfo"
            android:textSize="@dimen/tamanyText"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_Data"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/tamanyText"/>

        <TextView
            android:id="@+id/lbLloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/llocEsdevInfo"
            android:textSize="@dimen/tamanyText"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_Lloc"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/tamanyText"/>

        <TextView
            android:id="@+id/lbDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcio"
            android:textSize="@dimen/tamanyText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:ems="10"
            android:gravity="start|top"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/tamanyText"/>
    </LinearLayout>
</LinearLayout>