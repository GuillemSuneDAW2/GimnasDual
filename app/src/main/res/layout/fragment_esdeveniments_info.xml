<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EsdevenimentsInfoFragment">

    <TextView
        android:id="@+id/tv_Tipus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_desc"
        app:layout_constraintEnd_toEndOf="@+id/tv_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_Data" />

    <TextView
        android:id="@+id/tv_Data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_Tipus"
        app:layout_constraintEnd_toEndOf="@+id/tv_Tipus"
        app:layout_constraintStart_toStartOf="@+id/tv_Tipus"
        app:layout_constraintTop_toBottomOf="@+id/tv_Lloc" />

    <TextView
        android:id="@+id/tv_Lloc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_Data"
        app:layout_constraintEnd_toEndOf="@+id/tv_Data"
        app:layout_constraintStart_toStartOf="@+id/tv_Data"
        app:layout_constraintTop_toBottomOf="@+id/tv_Nom" />

    <TextView
        android:id="@+id/tv_Nom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_Lloc"
        app:layout_constraintEnd_toEndOf="@+id/tv_Lloc"
        app:layout_constraintStart_toStartOf="@+id/tv_Lloc"
        app:layout_constraintTop_toBottomOf="@+id/imageEsdev" />

    <EditText
        android:id="@+id/tv_desc"
        android:layout_width="233dp"
        android:layout_height="51dp"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Tipus" />

    <ImageView
        android:id="@+id/imageEsdev"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Nom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>